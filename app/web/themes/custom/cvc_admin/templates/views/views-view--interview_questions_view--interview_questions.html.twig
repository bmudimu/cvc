
{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
  ]
%}

<div{{ attributes.addClass }}>
    {{ title_prefix }}
    {{ title }}
    {{ title_suffix }}



    {{ exposed }}
    {{ attachment_before }}
    
    {% if rows %}
    {# <div class="container"> #}
        <div class="row">
            {% if header %}
                <div class="isotope-filters">
                    {{ header }}
                </div>
            {% endif %}            

            <div class="isotope-grid grid-three-column" data-gutter="20" data-columns="3">
                <div class="grid-sizer"></div>
                {% for row in rows %}
                    {{ row }}

                {% endfor %}
            </div>
        </div>
    {# </div> #}
    {% endif %}
    
    {{ pager }}

    {{ attachment_after }}
    {{ more }}

</div>
	